<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingBottom="12dp">

    <Button
        android:id="@+id/btnInformacionCL"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btncuenta"
        android:text="INFO"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnEditarCL"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btnInformacionCL"
        android:background="@drawable/btncuenta"
        android:text="EDITAR"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblNombre"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblEmail"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/item_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/item_sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblEmail"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_below="@id/item_tipo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/item_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/lblNombre"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/item_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="@string/lblEmail"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblEmail"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_below="@id/item_tipo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />
</RelativeLayout>